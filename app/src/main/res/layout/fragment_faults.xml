<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonbackfault"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Geri"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shapetransparent"
        android:drawableLeft="@drawable/buttonbackicon">

    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Kusurlar"
        android:textSize="30sp"
        android:layout_marginLeft="140dp"
        android:textStyle="bold" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaults"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fault_list_cardview"/>


</FrameLayout>