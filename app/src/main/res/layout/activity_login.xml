<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/loginUI_fragment"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/loginbgnew">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bginbg"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435"
        tools:context=".ViewController.Adapters.LoginPage"
        tools:ignore="MissingConstraints">

         <TextView
            android:id="@+id/kayıt"
            android:layout_width="287dp"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Hoşgeldiniz"
            android:textColor="#E7E8E8"
            android:textSize="35sp"
             android:textStyle="bold"
            tools:ignore="HardcodedText">

        </TextView>


        <TextView
            android:id="@+id/textlog"
            android:layout_width="300dp"
            android:textStyle="bold"
            android:layout_height="55dp"
            android:background="@drawable/shapetransparent"
            android:text="  Lütfen numaranızı ve şifrenizi  giriniz."
            android:textColor="#101010"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/bginbg"
            android:drawableLeft="@drawable/callvector"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Telefon numaranız"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#2E2D2D" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/bginbg"
            android:drawableLeft="@drawable/keyvector"
            android:drawablePadding="25dp"
            android:hint="Şifreniz"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#2D2E2D" />

        <Button
            android:id="@+id/loginBT"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/points_button"
            android:padding="2dp"
            android:text="Giriş yap"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>