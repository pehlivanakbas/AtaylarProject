        <EditText
            android:id="@+id/socialMediaFacebook"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawablePadding="48dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Facebook Hesabı"
            android:inputType="textPersonName"
          android:background="@drawable/backgroundblue"
            android:textColor="#121112"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/facebookicon"
            android:textColorHint="#81687A" />

        <EditText
            android:id="@+id/socialMediaTwitter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawablePadding="48dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Twitter Hesabı"
            android:layout_margin="10dp"
            android:background="@drawable/bluebgtransparent"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/twitter_icon"
            android:padding="18dp"
            android:textColor="#121112"
            android:textColorHint="#81687A" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/imagecompanylogo"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/add_photo" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Yukarıdaki butona basarak firma logosu yükleyiniz"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/companyInfoCompletedButton"
            android:layout_width="match_parent"
            android:background="@drawable/edittextarkaplan"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:text="Bilgileri Kaydet"
            android:textColor="@color/white"
            android:textSize="20sp" />


