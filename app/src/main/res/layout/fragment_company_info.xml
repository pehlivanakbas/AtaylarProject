        <EditText
            android:id="@+id/CompanyName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/company_icon"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:ems="10"
            android:layout_margin="5dp"
            android:background="@drawable/shapetransparent"
            android:hint="Firma Adı"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#050505"
            android:textColorHint="#81687A" />

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:background="@drawable/shapetransparent"
            android:drawableLeft="@drawable/phone_icon"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Telefon Numarası"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#81687A" />



        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:background="@drawable/shapetransparent"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:hint="E-posta"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#121111"
            android:textColorHint="#81687A" />

        <EditText
            android:id="@+id/socialMediaInstagram"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittextarkaplan"
            android:drawablePadding="60dp"
            android:drawableLeft="@drawable/instagramiconlayout"
            android:hint="Instagram Hesabı"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="#121112"
            android:textColorHint="#81687A" />


