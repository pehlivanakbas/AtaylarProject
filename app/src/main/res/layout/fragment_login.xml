<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/loginUI_fragment"
android:layout_width="match_parent"
android:layout_height="match_parent"

>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="15dp"

        tools:context=".ViewController.Adapters.LoginPage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="58dp">

        <TextView
            android:id="@+id/kayıt"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Giriş yap"
            android:textColor="#A54F77"
            android:textSize="40sp"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:id="@+id/textlog"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Uygulamayı kullanmak için Lütfen giriş  yapınız"
            android:textColor="#A74985"
            android:textSize="19sp">

        </TextView>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"

            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Telefon numarası"
            android:inputType="phone"
            android:textColor="#BD9DB4"
            android:textColorHint="#81687A" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"


            android:drawablePadding="25dp"
            android:hint="Şifre"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#81687A" />

        <Button
            android:id="@+id/loginBT"
            android:layout_width="287dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"

            android:padding="2dp"
            android:text="Giriş yap"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <!--  <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:text="By clicking on SignUp,you agree to our Terms of Service and Privacy policy"
        android:textColor="#FFFBF6"
        android:textSize="15sp" />
-->


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Üye değil misiniz?" />

            <TextView
                android:id="@+id/navigateToSignUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:text="Kayıt ol"
                android:textColor="@color/purple_700"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>