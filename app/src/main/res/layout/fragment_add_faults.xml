<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/company_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="581dp"
        android:layout_gravity="center"
        android:background="@drawable/whiteblurnoradiusbackground"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323"
        tools:context=".ViewController.Adapters.LoginPage"
        tools:ignore="MissingConstraints">

        <Spinner
            android:id="@+id/firstlayer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/secondlayer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/tirthlayer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/fourthlayer"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/fifthlayer"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <EditText
            android:id="@+id/faultsDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@drawable/shapetransparent"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Hatanın açıklaması"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textColorHint="#81687A" />


        <!--<EditText
                android:id="@+id/editTextPassword"
